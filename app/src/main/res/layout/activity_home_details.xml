<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeDetails">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:textColor="@color/Theme"
        android:textStyle="bold"
        android:id="@+id/header"
        android:textSize="20sp"
        android:text="HOME DETAILS" />

    <ImageView
        android:layout_margin="10dp"
        android:layout_below="@+id/header"
        android:id="@+id/HDhomePic"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        app:srcCompat="@drawable/ic_home" />

    <TextView
        android:id="@+id/HDhomeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/HDhomePic"
        android:text="APARTMENT NAME"
        android:textSize="20sp"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/HDhomeName"
        android:layout_margin="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="17sp"
                android:text="Sub City  "
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/HDsub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="17sp"

                android:text="Sub City" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp">
            <TextView

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="17sp"
                android:text="Woreda  "
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/HDworeda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="17sp"

                android:text="Woreda" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp">
            <TextView

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="17sp"
                android:text="Rooms"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/HDrooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="17sp"
                android:text="Rooms" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp">
            <TextView

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="17sp"
                android:text="Price  "
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/HDprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="17sp"

                android:text="Price" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp">
            <TextView

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="17sp"
                android:text="Phone  "
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/HDphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="17sp"

                android:text="Phone" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp">
            <TextView

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="17sp"
                android:text="Description  "
                android:textStyle="bold"/>

        </LinearLayout>
        <TextView
            android:id="@+id/HDdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textSize="17sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Description" />

    </LinearLayout>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:id="@+id/contact"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:text="Contact"/>


</RelativeLayout>